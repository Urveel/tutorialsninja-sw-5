<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Suite" verbose="1">
    <listeners>
        <listener class-name="com.tutorialsninja.demo.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Sanity Test">
        <groups>
            <run>
                <include name="sanity"></include>
            </run>
        </groups>

        <classes>
            <class name="com.tutorialsninja.demo.testsuite.AccountRegisterPageTest"></class>
            <class name="com.tutorialsninja.demo.testsuite.AccountLoginPageTest"></class>
            <class name="com.tutorialsninja.demo.testsuite.DesktopsPageTest"></class>
            <class name="com.tutorialsninja.demo.testsuite.LaptopsAndNotebooksPageTest"></class>
            <class name="com.tutorialsninja.demo.testsuite.TopMenuTest"></class>

        </classes>
    </test>
</suite>